{
  "name": "banger",
  "version": "0.2.15",
  "description": "Add DuckDuckGo-like !Bangs to any search engine.",
  "scripts": {
    "watch": "vite build --watch",
    "watch:ext": "chokidar \"static/**/*\" -c \"pnpm run build:ext\"",
    "bundle": "vite build",
    "build:ext": "web-ext build --overwrite-dest",
    "clean": "rimraf dist/ web-ext-artifacts/",
    "prebuild": "pnpm run clean && mkdirp dist/",
    "build": "pnpm run bundle && pnpm run build:ext",
    "lint:src": "xo --fix .",
    "lint:ext": "web-ext lint",
    "lint": "pnpm run lint:src && pnpm run lint:ext",
    "test": "vitest",
    "start:ext": "web-ext run --devtools --url about:addons",
    "start": "concurrently -k \"pnpm run watch\" \"pnpm run watch:ext\" \"pnpm run start:ext\"",
    "dev": "pnpm run start",
    "sign": "env-cmd -x web-ext sign --api-key=\\$FIREFOX_API_KEY --api-secret=\\$FIREFOX_API_SECRET",
    "prepare": "husky install",
    "release:version": "standard-version --sign",
    "release:tags": "git push --follow-tags origin main",
    "release:github": "env-cmd conventional-github-releaser -p conventionalcommits",
    "release": "pnpm run release:version && pnpm run release:tags && pnpm run release:github",
    "publish": "web-ext-submit"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhistlingZephyr/banger.git"
  },
  "keywords": [
    "banger",
    "bang",
    "extension",
    "addon",
    "firefox"
  ],
  "author": "WhistlingZephyr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WhistlingZephyr/banger/issues"
  },
  "homepage": "https://github.com/WhistlingZephyr/banger#readme",
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@fontsource/inter": "^4.5.14",
    "@tsconfig/recommended": "^1.0.1",
    "@types/file-saver": "^2.0.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-modal": "^3.13.1",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/ui": "^0.26.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "conventional-github-releaser": "^3.1.5",
    "downshift": "^7.0.5",
    "env-cmd": "^10.1.0",
    "escape-string-regexp": "^5.0.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-cartesian": "^7.6.0",
    "file-saver": "^2.0.5",
    "gridjs": "^5.1.0",
    "gridjs-react": "^5.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mkdirp": "^1.0.4",
    "ms": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-modal": "^3.16.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.4",
    "typescript-plugin-css-modules": "^4.1.1",
    "use-file-picker": "^1.5.1",
    "vite": "^4.0.3",
    "vitest": "^0.26.2",
    "web-ext": "^7.4.0",
    "web-ext-submit": "^7.4.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.75.0",
    "xo": "^0.53.1"
  }
}
