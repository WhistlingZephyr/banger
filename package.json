{
  "name": "banger",
  "version": "0.1.4",
  "description": "Add DuckDuckGo-like !Bangs to any search engine.",
  "targets": {
    "background": {
      "source": [
        "./src/background-script.ts",
        "./src/pages/options.html"
      ],
      "distDir": "./dist",
      "sourceMap": true
    }
  },
  "scripts": {
    "watch": "parcel watch",
    "bundle": "parcel build",
    "build:ext": "web-ext build --overwrite-dest",
    "clean": "rimraf dist/ web-ext-artifacts/",
    "prebuild": "npm run clean && mkdirp dist/",
    "build": "npm run bundle && npm run build:ext",
    "lint:src": "xo --fix .",
    "lint:ext": "npm run build && web-ext lint",
    "lint": "npm run lint:src && npm run lint:ext",
    "test:unit": "jest",
    "test": "npm run lint && npm run test:unit",
    "start:ext": "web-ext run --devtools",
    "start": "npm run build && concurrently -k npm:watch npm:start:ext",
    "sign": "npm run build && env-cmd -x web-ext sign --api-key=\\$FIREFOX_API_KEY --api-secret=\\$FIREFOX_API_SECRET",
    "prepare": "husky install",
    "release": "standard-version --sign",
    "release:tags": "git push --follow-tags origin main",
    "release:github": "env-cmd conventional-github-releaser -p conventionalcommits",
    "postrelease": "npm run release:tags && npm run release:github"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhistlingZephyr/banger.git"
  },
  "keywords": [
    "banger",
    "bang",
    "extension",
    "addon",
    "firefox"
  ],
  "author": "WhistlingZephyr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WhistlingZephyr/banger/issues"
  },
  "homepage": "https://github.com/WhistlingZephyr/banger#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^29.2.2",
    "@types/react": "^18.0.25",
    "concurrently": "^7.5.0",
    "conventional-github-releaser": "^3.1.5",
    "env-cmd": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "jest-webextension-mock": "^3.7.22",
    "lint-staged": "^13.0.3",
    "mkdirp": "^1.0.4",
    "parcel": "^2.7.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "preact": "^10.11.2",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "web-ext": "^7.3.1",
    "web-ext-types": "^3.2.1",
    "xo": "^0.52.4"
  }
}
