{
  "name": "banger",
  "version": "0.2.32",
  "description": "Add DuckDuckGo-like !Bangs to any search engine.",
  "scripts": {
    "watch": "vite build --watch",
    "watch:ext": "chokidar \"static/**/*\" -c \"pnpm run build:ext\"",
    "bundle": "vite build",
    "build:ext": "web-ext build --overwrite-dest",
    "clean": "rimraf dist/ web-ext-artifacts/",
    "prebuild": "pnpm run clean && mkdirp dist/",
    "build": "pnpm run bundle && pnpm run build:ext",
    "lint:src": "xo --fix .",
    "lint:ext": "web-ext lint",
    "lint": "pnpm run lint:src && pnpm run lint:ext",
    "test": "vitest",
    "start:ext": "web-ext run --devtools --url about:addons",
    "start": "concurrently -k \"pnpm run watch\" \"pnpm run watch:ext\" \"pnpm run start:ext\"",
    "dev": "pnpm run start",
    "sign": "env-cmd -x web-ext sign --api-key=\\$WEB_EXT_API_KEY --api-secret=\\$WEB_EXT_API_SECRET",
    "prepare": "husky",
    "release:version": "standard-version --sign",
    "release:tags": "git push --follow-tags origin main",
    "release:github": "env-cmd conventional-github-releaser -p conventionalcommits",
    "release": "pnpm run release:version && pnpm run release:tags && pnpm run release:github"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhistlingZephyr/banger.git"
  },
  "keywords": [
    "banger",
    "bang",
    "extension",
    "addon",
    "firefox"
  ],
  "author": "WhistlingZephyr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WhistlingZephyr/banger/issues"
  },
  "homepage": "https://github.com/WhistlingZephyr/banger#readme",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@fontsource/inter": "^5.1.0",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@tsconfig/recommended": "^1.0.7",
    "@types/file-saver": "^2.0.7",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/react-modal": "^3.16.3",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/ui": "^2.1.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "conventional-github-releaser": "^3.1.5",
    "downshift": "^9.0.8",
    "env-cmd": "^10.1.0",
    "escape-string-regexp": "^5.0.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "fast-cartesian": "^9.0.0",
    "file-saver": "^2.0.5",
    "gridjs": "^6.2.0",
    "gridjs-react": "^6.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mkdirp": "^3.0.1",
    "ms": "^2.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-modal": "^3.16.1",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "web-ext": "^8.3.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.95.0",
    "xo": "^0.59.3"
  },
  "dependencies": {
    "amo-upload": "^0.6.0",
    "use-file-picker": "^2.1.2"
  }
}
